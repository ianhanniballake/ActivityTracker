<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="@dimen/content_vertical_margin"
              android:layout_marginEnd="@dimen/content_horizontal_margin"
              android:layout_marginLeft="@dimen/content_horizontal_margin"
              android:layout_marginRight="@dimen/content_horizontal_margin"
              android:layout_marginStart="@dimen/content_horizontal_margin"
              android:layout_marginTop="@dimen/content_vertical_margin"
              android:orientation="vertical"
              tools:context="com.ianhanniballake.activitytracker.LoggedOutFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/inner_padding"
        android:text="@string/log_in_required"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
